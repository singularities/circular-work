        example: |
          {
            "data": {
              "type": "groups",
              "attributes": {
                "name": "Pepe y Lola",
                # FIXME Internally, these emails are mapped to users, with an email
                # Should we move it to relationships? In that case, we have to create
                # each user first
                "emails": [
                  "pepe@mat.com",
                  "lola@mat.com"
                ]
              }
            }
          }
    responses:
      200:
        body:
          application/vnd.api+json:
            example: |
              {
                "data": {
                  "id": "3",
                  "type": "groups",
                  "attributes": {
                    "name": "Pepe y Lola",
                    "emails": [
                      "pepe@mat.com",
                      "lola@mat.com"
                    ]
                  }
                  # FIXME alternative description with users
