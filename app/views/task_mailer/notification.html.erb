<%= simple_format @body %>

<% content_for :footer do %>
  <div class="message">
    <%= link_to t('task.notification.footer.message'),
                task_url(@task, token: @task.organization.token) %>
  </div>
  <%= link_to t('task.notification.footer.button'),
              task_url(@task, token: @task.organization.token),
              class: "btn btn-lg btn-accent float-right" %>
<% end %>
