{{#bs-navbar fluid=false}}
  <div class="navbar-header">
    {{#bs-navbar-toggle}}
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    {{/bs-navbar-toggle}}
    {{#link-to 'index' class="navbar-brand"}}
      <img src="/images/logo_color_flattened.svg" alt="Circular Works">
    {{/link-to}}
  </div>
  {{#bs-navbar-content}}
    {{#bs-navbar-nav}}
      {{#bs-nav-item}}{{#link-to "home"}}{{ t 'navbar.tasks' }}{{/link-to}}{{/bs-nav-item}}
    {{/bs-navbar-nav}}

    {{#if session.isAuthenticated}}
      <p class="navbar-text navbar-right navbar-logged-in">
        <span class="logged-as">{{loggedAs}}</span>
        <a {{action 'invalidateSession'}} class="btn btn-default navbar-btn">{{ t 'navbar.logout' }}</a>
      </p>
    {{else}}
      {{#link-to 'session.login' class="btn btn-primary navbar-btn navbar-right"}}
        {{ t 'navbar.login' }}
      {{/link-to}}
    {{/if}}
  {{/bs-navbar-content}}
{{/bs-navbar}}
