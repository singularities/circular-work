{{#each task.errors as |error|}}
  <div class="error">
    {{#bs-alert type="danger"}}
      {{error.attribute}} {{error.message}}
    {{/bs-alert}}
  </div>
{{/each}}

{{#bs-form action="createTask"}}
  {{bs-form-element label=labels.title placeholder=labels.title value=task.title}}
  {{bs-form-element label=labels.description
                   placeholder=labels.description
                   controlType="textarea"
                   value=task.description}}
  {{bs-form-element label=labels.recurrence
                    placeholder=labels.recurrence
                    value=task.recurrence}}
  {{bs-form-element label=labels.notificationEmail
                    placeholder=labels.notificationEmail
                    controlType="email"
                    value=task.notificationEmail}}
  {{bs-form-element label=labels.notificationSubject
                    placeholder=labels.notificationSubject
                    controlType="textarea"
                    value=task.notificationSubject}}


  {{#bs-button type="primary" action="createTask"}}
    {{t 'tasks.new.title'}}
  {{/bs-button}}
{{/bs-form}}
