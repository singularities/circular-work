                  #           "email": "lola@mat.com"
                  #         }
                  #       }
                  #     ]
                  #   }
                  # }
                }
              }
  /{groupId}:
    get:
      responses:
        200:
          body:
            application/vnd.api+json:
              example: |
                {
                  "data": {
                    "id": "3",
                    "type": "groups",
                    "attributes": {
                      "name: "Pepe y Lola",
                      # FIXME alternative user description (see above)
                      "emails": [
                        "pepe@mat.com",
                        "lola@mat.com"
                      ]
                    }
                  }
                }
    patch:
      body:
        application/vnd.api+json:
          example: |
            {
              "id": "3",
              "type": "groups",
              "attributes": {
                "name": "Pepe y Lolo"
                # FIXME alternative user description (see above)
                "emails": [
                  "pepe@mat.com",
                  "lolo@mat.com"
                ]
              }
            }
      responses:
        200:
          body:
            application/vnd.api+json:
              example: |
                {
                  "data": {
                    "id": "3",
                    "type": "groups",
                    "attributes": {
                      "name": "Pepe y Lolo"
                      # FIXME alternative user description (see above)
                      "emails": [
                        "pepe@mat.com"
                        "lolo@mat.com"
                      ]
                    }
