{{#if errorMessage}}
  <p class="alert alert-danger">{{errorMessage}}</p>
{{/if}}

{{#bs-form action="setPassword" submitOnEnter=true}}
  {{bs-form-element label=(t 'session.password.label')
                    controlType="password"
                    placeholder=(t 'session.password.placeholder')
                    value=password}}
  {{#bs-button type="accent" block="true" action="setPassword"}}
    {{ t 'session.password_recover.button'}}
  {{/bs-button}}
{{/bs-form}}
