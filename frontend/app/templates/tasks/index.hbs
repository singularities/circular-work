<div class="tasks">
  <h1>
    {{ t 'tasks.index.title'}}

    {{#if model }}
      {{#link-to 'tasks.new' class="btn btn-accent pull-right"}}
        {{t 'tasks.index.new.button'}}
      {{/link-to}}
    {{/if}}
  </h1>

  <div class="list-group">
    {{#each model as |task|}}
      {{#link-to 'tasks.show' task class="list-group-item"}}
        <h4 class="list-group-item-heading">{{task.title}}</h4>

        <div class="list-group-item-text">
          {{ fa-icon "clock-o"}}
          {{ t 'tasks.index.responsibles' responsibles="Alberto, Irene"}}
        </div>

      {{/link-to}}
    {{/each}}
  </div>

  {{#unless model }}
    {{#bs-alert type="info" dismissible=false}}
    {{ t 'tasks.index.empty.message'}}
    {{#link-to 'tasks.new' class="btn btn-accent"}}
      {{ t 'tasks.index.empty.button'}}
    {{/link-to}}
    {{/bs-alert}}
  {{/unless}}
</div>
