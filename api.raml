#%RAML 1.0
title: Circular Works
version: v1
baseUri: http://api.circular.works
/tasks:
  get:

    # TODO authentication
    responses:
      200:
        body:
          application/vnd.api+json:
            # Example for showing the index in the app. Maybe we should use a param for this case?
            example: |
              {
                data: [
                  {
                    "type": "tasks",
                    "id": "1",
                    "attributes": {
                      "title": "Cleaning the space",
                      "recurrence": 2
                    },
                    "relationships": {
                      "turns": {
                        "data": [
                          {
                            "type": "turns",
                            "id": "3"
                          },
                          {
                            "type": "turns",
                            "id": "25"
                          }
                        ]
                      }
                    }
                  },
                  {
                    "type": "tasks",
                    "id": "2",
                    "attributes": {
                      "title": "Monthly meeting",
                      "recurrence": 3,
                      "recurrence_match": "2 2"
                    },
                    "relationships": {
                      "turns": {
                        "data": []
                      }
                  }
                ]
              }

  post:
    # TODO authentication
    body:
      application/vnd.api+json:
        example: |
          {
            "data": {
              "type": "tasks",
              "attributes": {
                "title": "Delivery and cleaning",
                "description": "Weekly delivery of vegetables and cleaning of the space",
                "recurrence": 2,
                "email": "space@lists.mat.com",
                "notification_subject": "@responsibles have to deliver and clean the space",
                "notification_body": "This is the weekly reminder for @responsibles to clean the space"
              },
              "relationships": {
                "turns": {
                  "data": [
                    {
                      "type": "turns",
                      "id": "7"
                    },
                    {
                      "type": "turns",
                      "id": "18"
                    }
                  ]
                }
              }
            }
          }
  /{taskId}:
    get:
      # TODO authentication
      responses:
        200:
          body:
            application/vnd.api+json:
              example: |
                {
                  "data": {
                    "id": "7",
                    "type": "tasks",
                    "attributes": {
                        "title": "Cleaning the space",
                        "description": "Every week, we are cleaning the space",
                        "recurrence": 2,
                        "email": "space@lists.mat.com",
                        "notification_subject": "@responsibles have to clean the space",
                        "notification_body": "This is the monthly reminder for @responsibles to clean the space"
                    },
                    "relationships": {
                      "turns": {
                        "data": [
                          {
                            "id": "7",
                            "type": "turns",
                          },
                          {
                            "id": "25",
                            "type": "turns",
                          }
                        ]
                      }
                    }
                  }
                }
    delete:
    patch:
      body:
        application/vnd.api+json:
          example: |
            {
              "data": {
                "type": "tasks",
                "id": "1",
                "attributes": {
                  "title": "A new title for this task"
                }
              }
            }
/turns:
  post:
    body:
      application/vnd.api+json:
        example: |
          {
            "data": {
              "type": "turns",
              "attributes": {
                "position": 2
              },
              "relationships": {
                "groups": {
                  "data": [
                    {
                      "id": "4",
                      "type": "groups"
                    },
                    {
                      "id": "7",
                      "type": "groups"
                    }
                  ]
                }
              }
            }
          }
    responses:
      200:
        body:
          application/vnd.api+json:
            example: |
              {
                "data": {
                  "id": "7",
                  "type": "turns",
                  "attributes": {
                    "position": 2
                  },
                  "relationships": {
                    "groups":
                      "data": [
                        {
                          "id": "4",
                          "type": "groups",
                        },
                        {
                          "id": "7",
                          "type": "groups",
                        }
                      ]
                    }
                  }
                }
  /{turnId}:
    patch:
      body:
        application/vnd.api+json:
          example: |
            {
              "id": "3",
              "type": "turns"
              "attributes": {
                "position": 3,
              },
              "relationships": {
                "groups": {
                  "data": [
                    {
                      "id": "11"
                      "type": "groups"
                    }
                  ]
                }
              }
            }
      responses:
        200:
          body:
            application/vnd.api+json:
              example: |
                {
                  "data": {
                    "id": "3",
                    "type": "groups",
                    "attributes": {
                      "position": 3
                    },
                    "relationships": {
                      "groups": {
                        "data": [
                          {
                            "id": "11",
                            "type": "groups",
                          }
                        ]
                      }
                    }
                  }
                }
